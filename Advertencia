    20%  { --h: 40; }   /* naranja */
    40%  { --h: 120; }  /* verde */
    60%  { --h: 200; }  /* azul */
    80%  { --h: 280; }  /* magenta */
    100% { --h: 360; }  /* rojo -> loop */
  }
  .neon {
    animation: hueShift 6.5s linear infinite;
  }

  /* Efecto de parpadeo aleatorio */
  @keyframes flicker {
    0%   { opacity:1; filter:brightness(1); }
