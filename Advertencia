    8%   { opacity:1; filter:brightness(1.2); }
    10%  { opacity:0.92; filter:brightness(0.8); }
    20%  { opacity:1; filter:brightness(1); }
    100% { opacity:1; filter:brightness(1); }
  }
  .neon.flicker {
    animation: hueShift 6.5s linear infinite, flicker 3.6s steps(6, end) infinite;
    animation-delay: 0s, 0.2s;
  }

