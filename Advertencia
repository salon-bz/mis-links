  <script>
    // Pequeño control para accesibilidad: cambia el atributo aria-live cuando se detecte foco o preferencia reduce-motion
    (function(){
      const neon = document.querySelector('.neon');
      if (!neon) return;
      // Si el usuario prefiere reducir movimiento, quitar animaciones ruidosas
      const prefersReduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReduce) {
        neon.style.animation = 'none';
        document.querySelectorAll('.warning-icon, .neon').forEach(el => el.style.transition = 'none');
      }
      // Forzar lectura breve para lectores de pantalla
      neon.setAttribute('aria-atomic','true');
    })();
  </script>
